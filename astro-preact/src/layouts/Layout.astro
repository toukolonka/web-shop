---
import NavBar from '../components/NavBar';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="A simple web shop" />
		<title>Astro Preact</title>
	</head>
	<body class="bg-slate-200">
		<NavBar client:load />
		<div class='mx-auto max-w-xl w-full my-2'>
			<div class='mx-2'>
				<slot />
				<div id="portal" />
			</div>
		</div>
	</body>
	<style is:global>
		/* Remove arrows from number inputs */
		input::-webkit-outer-spin-button,
		input::-webkit-inner-spin-button {
			-webkit-appearance: none;
			margin: 0;
		}

		h1 {
			font-size: 1.875rem/* 30px */;
			line-height: 2.25rem/* 36px */;
		}

		h2 {
			font-size: 1.25rem/* 20px */;
			line-height: 1.75rem/* 28px */;
		}

		input:invalid[focused="true"]{
			border: 1px solid red;
		}

		input:invalid[focused="true"] ~ span{
			display: block;
		}

		.btn {
			@apply font-bold py-2 px-4 rounded cursor-pointer;
		}
		.btn-blue {
			@apply bg-blue-500 text-white;
		}
		.btn-green {
			@apply bg-green-500 text-white;
		}
		.btn-red {
			@apply bg-red-500 text-white;
		}
		.btn-green:hover {
			@apply bg-green-700;
		}
		.btn-red:hover {
			@apply bg-red-700;
		}
		.btn-blue:hover {
			@apply bg-blue-700;
		}
		.btn-disabled {
			@apply opacity-50 cursor-not-allowed;
		}
		.input {
			@apply bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded focus:border-blue-500 p-2.5;
		}
		.card-text {
			@apply text-2xl font-bold tracking-tight
		}
		.card-secondary-text {
			@apply font-normal
		}
	</style>
</html>
